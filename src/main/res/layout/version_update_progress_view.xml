<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_6"
    android:layout_marginRight="@dimen/spacing_6"
    android:background="@color/color_ffffff"
    android:minHeight="@dimen/spacing_80"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_12"
    android:paddingRight="@dimen/spacing_12"
    android:paddingTop="@dimen/spacing_8">

    <TextView
        android:id="@+id/version_update_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#505056"
        android:textSize="@dimen/font_size_13" />

    <RelativeLayout
        android:id="@+id/update_progress_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/update_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_12"
            android:layout_centerInParent="true"
            android:max="100"
            android:progressDrawable="@drawable/version_update_progress" />

        <TextView
            android:id="@+id/update_percentage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0%"
            android:textColor="@color/color_323232"
            android:textSize="@dimen/font_size_11" />
    </RelativeLayout>
</LinearLayout>